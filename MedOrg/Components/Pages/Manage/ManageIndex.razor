@page "/manage"
@using Microsoft.AspNetCore.Authorization

<h2>Управление данными</h2>
<p class="text-muted">Добавление, редактирование и удаление записей</p>

<div class="row mt-4">
    <div class="col-md-3 mb-3">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-people-fill text-primary" style="font-size: 3rem;"></i>
                <h5 class="card-title mt-3">Врачи</h5>
                <p class="card-text">Управление врачами и их данными</p>
                <a href="/manage/doctors" class="btn btn-primary">Перейти</a>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-person-badge text-success" style="font-size: 3rem;"></i>
                <h5 class="card-title mt-3">Пациенты</h5>
                <p class="card-text">Управление пациентами</p>
                <a href="/manage/patients" class="btn btn-success">Перейти</a>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-hospital text-danger" style="font-size: 3rem;"></i>
                <h5 class="card-title mt-3">Больницы</h5>
                <p class="card-text">Управление больницами</p>
                <a href="/manage/hospitals" class="btn btn-danger">Перейти</a>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-person-lines-fill text-warning" style="font-size: 3rem;"></i>
                <h5 class="card-title mt-3">Персонал</h5>
                <p class="card-text">Управление обслуживающим персоналом</p>
                <a href="/manage/staff" class="btn btn-warning">Перейти</a>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s;
    }

        .card:hover {
            transform: translateY(-5px);
        }
</style>